{
  "name": "decidim_terrassa",
  "description": "TODO: Add a short description about decidim_terrassa",
  "keywords": [],
  "addons": [
    "heroku-postgresql:hobby-dev",
    "heroku-redis:hobby-dev",
    "sendgrid:starter"
  ],
  "scripts": {
    "postdeploy":
      "DISABLE_DATABASE_ENVIRONMENT_CHECK=1 rake db:schema:load db:migrate db:seed"
  },
  "env": {
    "AWS_ACCESS_KEY_ID": {
      "required": true
    },
    "AWS_SECRET_ACCESS_KEY": {
      "required": true
    },
    "CENSUS_PASSWORD": {
      "required": true
    },
    "CENSUS_URL": {
      "required": true
    },
    "CENSUS_USERNAME": {
      "required": true
    },
    "HERE_APP_ID": {
      "required": false
    },
    "HERE_APP_CODE": {
      "required": false
    },
    "HEROKU_APP_NAME": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "description": "A secret used by Rails to identify sessions",
      "generator": "secret"
    }
  }
}
